<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".MainActivity"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_weight="1"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team A"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="56sp"
        android:textAlignment="center"
        android:padding="4dp"
        android:gravity="center"
        android:id="@+id/team_a_score"
        android:fontFamily="sans-serif-medium"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="+3"
    android:padding="20dp"
    android:layout_marginTop="8dp"
    android:onClick="threeForTeamA"
    android:fontFamily="sans-serif-medium"
    android:layout_marginRight="8dp"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2"
        android:padding="20dp"
        android:onClick="twoForTeamA"
        android:fontFamily="sans-serif-medium"
        android:layout_marginRight="8dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+1"
        android:padding="20dp"
        android:onClick="oneForTeamA"
        android:fontFamily="sans-serif-medium"
        android:layout_marginRight="8dp"


        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="resetForTeamA"
            android:fontFamily="sans-serif-medium"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:textAlignment="center"
            android:padding="4dp"
            android:gravity="center"
            android:id="@+id/team_b_score"
            android:fontFamily="sans-serif-medium"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3"
            android:padding="20dp"
            android:layout_marginTop="8dp"
            android:onClick="threeForTeamB"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2"
            android:padding="20dp"
            android:onClick="twoForTeamB"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="8dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1"
            android:padding="20dp"
            android:onClick="oneForTeamB"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="8dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:onClick="resetForTeamB"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="8dp"
            android:id="@+id/reset"

            />
    </LinearLayout>


</LinearLayout>
